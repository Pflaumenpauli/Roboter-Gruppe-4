<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.example.myapplication.MainActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <Button
            android:id="@+id/buttonSetupBluetooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button"
            android:layout_alignBottom="@+id/button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:text="@string/setupBluetooth" />


        <ToggleButton
            android:id="@+id/toggleMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/buttonSetupBluetooth"
            android:layout_alignBottom="@+id/buttonSetupBluetooth"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@+id/buttonSetupBluetooth"
            android:onClick="onToggleClicked"
            android:text="@string/togglebutton"
            android:textOff="SCOUT"
            android:textOn="SCOUT" />

        <Button
            android:id="@+id/buttonShowData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="19dp"
            android:layout_marginRight="19dp"
            android:layout_marginTop="9dp"
            android:text="Data" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageParcours"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="9dp"
            android:text="Park_This" />

        <ImageView
            android:id="@+id/imageParcours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/parcours_bearbeitet_klein" />

        <Button
            android:id="@+id/buttonPause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/button"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp"
            android:layout_toEndOf="@+id/button"
            android:layout_toRightOf="@+id/button"
            android:text="Pause" />

        <TextView
            android:id="@+id/textViewMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/buttonSetupBluetooth"
            android:layout_alignStart="@+id/buttonSetupBluetooth"
            android:layout_alignTop="@+id/buttonShowData"
            android:layout_marginTop="10dp"
            android:text="Mode:" />

        <TextView
            android:id="@+id/textViewModeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textViewMode"
            android:layout_toEndOf="@+id/buttonSetupBluetooth"
            android:layout_toRightOf="@+id/buttonSetupBluetooth"
            android:text="ModeValue" />

        <TextView
            android:id="@+id/textViewXPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textViewModeValue"
            android:layout_alignBottom="@+id/textViewModeValue"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/textViewXPositionValue"
            android:layout_toStartOf="@+id/textViewXPositionValue"
            android:text="x:" />

        <TextView
            android:id="@+id/textViewXPositionValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textViewXPosition"
            android:layout_alignBottom="@+id/textViewXPosition"
            android:layout_toEndOf="@+id/button"
            android:layout_toRightOf="@+id/button"
            android:text="xValue" />

        <TextView
            android:id="@+id/textViewYPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textViewXPositionValue"
            android:layout_alignBottom="@+id/textViewXPositionValue"
            android:layout_marginEnd="7dp"
            android:layout_marginRight="7dp"
            android:layout_toLeftOf="@+id/textViewYPostionValue"
            android:layout_toStartOf="@+id/textViewYPostionValue"
            android:text="y:" />

        <TextView
            android:id="@+id/textViewYPostionValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textViewYPosition"
            android:layout_alignBottom="@+id/textViewYPosition"
            android:layout_marginEnd="18dp"
            android:layout_marginRight="18dp"
            android:layout_toLeftOf="@+id/buttonShowData"
            android:layout_toStartOf="@+id/buttonShowData"
            android:text="yValue" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
